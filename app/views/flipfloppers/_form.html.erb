<%= form_for(@flipflopper) do |f| %>
  <% if @flipflopper.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@flipflopper.errors.count, "error") %> prohibited this flipflopper from being saved:</h2>

      <ul>
      <% @flipflopper.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<form>
<fieldset>
  <legend>Give us some info here, please:</legend>

  <div class="row collapse">
    <div class="small-8">
       <div class="small-3 columns">
        <label for="left-label" class="left inline">
    <%= f.label :drink %><br>
        </label>
        </div>
      <br>
      <div class="small-9 columns">
    <%= f.text_field :drink %>
      </div>
    </div>
  </div>


  <div class="row collapse">
    <div class="small-8">
       <div class="small-3 columns">
        <label for="left-label" class="left inline">
    <%= f.label :name %><br>
        </label>
        </div>
      <br>
      <div class="small-9 columns">
    <%= f.text_field :name %>
      </div>
    </div>
  </div>


  <div class="row collapse">
    <div class="small-8">
       <div class="small-3 columns">
        <label for="left-label" class="left inline">
    <%= f.label :surname %><br>
        </label>
        </div>
      <br>

      <div class="small-9 columns">
    <%= f.text_field :surname %>
   </div>
    </div>
  </div>


  <div class="row collapse">
    <div class="small-8">
       <div class="small-3 columns">
        <label for="left-label" class="left inline">
    <%= f.label :email %><br>
         </label>
        </div>
      <br>
      <div class="small-9 columns">
    <%= f.text_field :email %>
      </div>
    </div>
  </div>

  <div class="row collapse">
    <div class="small-8">
       <div class="small-3 columns">
        <label for="left-label" class="left inline">
    <%= f.label :birthday, class: "right-inline", title: "Correct b'day = 2 free drinks on that date ;-)", data: {tooltip: true} %><br>
         </label>
        </div>
      <br>
      <div class="small-9 columns">
    <%= f.date_select :birthday, :start_year => 1920, :end_year => 1995 %>
      </div>
    </div>
  </div>


  <div class="row collapse">
    <div class="small-8">
       <div class="small-3 columns">
        <label for="left-label" class="left inline">
    <%= f.label :comment %><br>
    </label>
        </div>
      <br>
    <div class="small-9 columns">
    <%= f.text_area :comment %>
      </div>
    </div>
  </div>


  <div class="actions">
    <div class="small-button">
      <div class="small-8 small-offset-3 colimns"><%= f.submit %></div>
    </div>
  </div>
</fieldset>
</form>
<% end %>
